{
  "name": "linux-helper-assistant",
  "private": true,
  "version": "1.1.1",
  "type": "module",
  "scripts": {
    "create-env": "cp .env.example .env",
    "create-env-win": "copy .env.example .env",
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest"
  },
  "build": {
    "appId": "com.asambhav.multi-mco",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio for voice input."
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "dist/",
      "dist-electron/",
      "node_modules/",
      "package.json",
      "static/**/*"
    ],
    "extraResources": [
      {
        "from": "./resources/bin/",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.808.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@google/genai": "^0.13.0",
    "@google/generative-ai": "^0.24.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "axios": "^1.8.4",
    "bufferutil": "^4.0.9",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fetch-blob": "^4.0.0",
    "fix-path": "^4.0.0",
    "formidable": "^3.5.4",
    "framer-motion": "^12.7.4",
    "install": "^0.13.0",
    "mammoth": "^1.9.0",
    "node-pptx-parser": "^1.0.1",
    "npm": "^11.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.5.1",
    "react-toastify": "^11.0.5",
    "rehype-highlight": "^7.0.2",
    "utf-8-validate": "^6.0.5",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/formidable": "^3.4.5",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/textract": "^2.4.5",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^36.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.1.4"
  },
  "main": "dist-electron/main.js"
}
